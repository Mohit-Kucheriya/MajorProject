<style>
  .filters {
    display: flex;
    align-items: center;
    /* justify-content: space-between; */
    flex-wrap: wrap;
    padding: 0 1vw;
    
  }
  .filter {
    text-align: center;
    margin-right: 3rem;
    opacity: 0.8;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }
  .switchToggle {
    display: flex;
    align-items: center;
    margin-left: 7rem;
    padding: 1rem;
    /* border-radius: 1rem; */
    border: 0.5px solid #d4d4d4;
    height: 2.5rem;
  }

  .tax-info {
    display: none;
  }
</style>

<%- layout("/layouts/boilerplate") %>
<br />
<div class="filters">
  <div class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-water-ladder"></i></div>
    <p>Amazing pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-hotel"></i></div>
    <p>Mansions</p>
  </div>
  <div class="filter">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-puzzle-piece"></i></div>
    <p>Play</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Dome</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-burger"></i></div>
    <p>Breakfast</p>
  </div>

  <div class="switchToggle mb-3 rounded shadow-sm ">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total before taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for( listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="img-links">
    <div class="card col">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt=""
        style="height: 18rem"
      />
      <div class="card-img-overlay"></div>

      <div class="card-body ">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text">
          <span> &#x20B9;<%= listing.price.toLocaleString("en-in")%></span>
          night
          <i class="tax-info">&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let switchToggle = document.getElementById("flexSwitchCheckDefault");
  switchToggle.addEventListener("click", () => {
    console.log("clicked");
    let taxinfo = document.getElementsByClassName("tax-info");
    for (info of taxinfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
