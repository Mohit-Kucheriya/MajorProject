<%- layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing!</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          id="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">  <!--To display after user fill correct info-->
          Looks good!             
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          rows="3"
          class="form-control"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">
          Please write a short description.
        </div>
      </div>

      <div class="mb-3">
        <label for="img-url" class="form-label">Image Link</label>
        <input
          type="text"
          id="img-url"
          name="listing[image]"
          value="<%= listing.image %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Enter valid URL/Link.
        </div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>

        <input
          type="number"
          name="listing[price]"
          id="price"
          value="<%= listing.price %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Please enter a Valid Price.
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>

        <input
          type="text"
          name="listing[location]"
          id="location"
          value="<%= listing.location %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Location should be valid.
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>

        <input
          type="text"
          name="listing[country]"
          id="country"
          value="<%= listing.country %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Country should be valid.
        </div>
      </div>
      <button class="btn btn-dark my-2">Edit</button>
    </form>
  </div>
</div>
