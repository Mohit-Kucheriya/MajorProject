<% layout("/layouts/boilerplate") %>
<div class="row mt-2">
  <div class="col-8 offset-3">
    <h3 class="mx-3">Details for particular list</h3>
  </div>

  <div class="col-4 offset-3">
    <div class="card">
      <img src=" <%= listing.image %> " class="card-img-top show-img" alt="" />
      <div class="card-body">
        <h5 class="card-title mt-2"><%= listing.title %></h5>
        <p class="card-text">
          <%= listing.description %> <br />
          <span>&#x20B9; <%= listing.price.toLocaleString("en-in")%></span>
          night<br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="btns my-2">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3"
    >Edit</a
  >

  <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark offset-2">Delete</button>
  </form>
</div>
