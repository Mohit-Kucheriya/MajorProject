<% layout("/layouts/boilerplate") %>
<div class="row mt-2">
  <div class="row">
    <div class="col-6 mx-auto">
      <h3 class="card-title"><%= listing.title %></h3>
    </div>
  </div>
  <div class="row">
    <div class="card col-6 mx-auto">
      <img src=" <%= listing.image %> " class="card-img-top show-img" alt="" />
      <div class="card-body">
        <p class="font-monospace fst-italic mt-1">Owned by:<%= listing.owner.username %></p>
        <p class="card-text"><%= listing.description %> </p>
        <p class="fw-normal"> <span>&#x20B9; <%= listing.price.toLocaleString("en-in")%></span>
          night </p>
        <p class="fw-medium"> <%= listing.location %>, <%= listing.country %></p>
      </div>
    </div>
  </div>

<% if (currUser && (listing.owner._id.equals(currUser._id))) { %>

  <div class="row">
    <div class="col-md-6 offset-3 d-flex">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-3"
        >Edit</a
      >

      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
  <% } %>


  <div class="row">
    <div class="col-6 mx-auto">
      <% if (currUser) { %>
      <hr />
      <h4>Leave a Review</h4>
      <form
        method="post"
        action="/listings/<%= listing._id %>/reviews"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            name="review[rating]"
            id="rating"
            class="form-range"
            min="0"
            max="5"
          />
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea
            class="form-control"
            id="comment"
            name="review[comment]"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">
            <!--To display after user fill correct info-->
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please add some comments for review.
          </div>
        </div>
        <div class="mb-3">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
        <% } %>
        <hr>
      </form>
  

      <h4>All Reviews</h4>
      <div class="row">
        <% for( review of listing.review ) { %>
        <div class="card col-6 mx-auto">
          <div class="card-body border border-secondary-subtle rounded">
            <h5 class="card-title px-2 mt-1">@<%= review.author.username %></h5>
            <p class="card-text px-3"><%= review.comment %></p>
            <p class="card-text px-3"><%= review.rating %> star</p>
            
          <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <div class="mb-3 px-3">
              <button class="btn btn-sm btn-dark ">Delete</button>

            </div>
          </form>
          </div>

        </div>

        <% } %>
      </div>
    </div>
  </div>
</div>
