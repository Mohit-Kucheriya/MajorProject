<% layout("/layouts/boilerplate") %>
  <div class="row mt-2">
    <div class="col-8 offset-3">
      <h3 class="mx-3 card-title">
        <%= listing.title %>
      </h3>
    </div>
      <div class="card col-6 offset-3">
        <img src=" <%= listing.image %> " class="card-img-top show-img" alt="" />
        <div class="card-body ">
          <!-- <h5 class="card-title mt-2"></h5> -->
          <p class="card-text mt-3">
            <%= listing.description %> <br />
              <span>&#x20B9; <%= listing.price.toLocaleString("en-in")%></span>
              night<br />
              <%= listing.location %> <br />
                <%= listing.country %>
          </p>
        </div>
      </div>
   
 


  <div class="btns ">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 ">Edit</a>

    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-2">Delete</button>
    </form>
  </div>
</div>